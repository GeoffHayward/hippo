<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                          https://maven.apache.org/xsd/settings-1.0.0.xsd">
    <servers>
        <server>
            <!-- This id must match the distributionManagement section in pom.xml -->
            <id>${env.MAVEN_REPO_SERVER_ID}</id>
            <username>${{ secrets.HIPPO_MAVEN_USERNAME }}</username>
            <!-- Credential stored in Github secrets -->
            <password>${{ secrets.HIPPO_MAVEN_PASSWORD }}</password>
        </server>
    </servers>
</settings>
